{% if project_type == "standalone" -%}
[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ python_version }}"
{% if license != "Proprietary" -%}
license = { text = "{{ license }}" }
{% endif -%}
{% if author_name -%}
authors = [
    { name = "{{ author_name }}"{% if author_email %}, email = "{{ author_email }}"{% endif %} },
]
{% endif -%}
dependencies = [
    "structlog>=24.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ module_name }}"]

{% else -%}
# Monorepo workspace — this is NOT a Python package itself.
# Each package has its own [project] and [build-system].
[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ python_version }}"
{% if license != "Proprietary" -%}
license = { text = "{{ license }}" }
{% endif -%}
{% if author_name -%}
authors = [
    { name = "{{ author_name }}"{% if author_email %}, email = "{{ author_email }}"{% endif %} },
]
{% endif -%}

[tool.uv.workspace]
members = [
{%- for pkg in packages %}
    "{{ pkg }}",
{%- endfor %}
]

[tool.uv.sources]
{%- for pkg in packages %}
{{ pkg | replace('-', '_') }} = { workspace = true }
{%- endfor %}

{% endif -%}

# ── Development dependencies ────────────────────────────────────────────

[dependency-groups]
dev = [
    "pytest>=8.0",
    "pytest-cov>=6.0",
    "ruff>=0.9",
    "pyrefly>=0.50",
    "pre-commit>=4.0",
]
docs = [
    "mkdocs-material>=9.0",
    "mkdocstrings[python]>=0.27",
    "mkdocs-gen-files>=0.5",
    "mkdocs-literate-nav>=0.6",
]

# ── Ruff ────────────────────────────────────────────────────────────────
# All rules enabled. We selectively ignore rules that conflict or are
# impractical. Run `ruff rule <CODE>` to understand any rule.

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 88
src = [{% if project_type == "standalone" %}"src", "tests"{% else %}{% for pkg in packages %}"{{ pkg }}/src", "{{ pkg }}/tests"{% if not loop.last %}, {% endif %}{% endfor %}{% endif %}]
extend-exclude = ["docs"]

[tool.ruff.lint]
select = ["ALL"]
ignore = [
    # ── Conflicts with Ruff formatter ──
    "W191",   # tab indentation (formatter handles this)
    "E111",   # indentation not multiple of X (formatter)
    "E114",   # indentation not multiple of X (comment) (formatter)
    "E117",   # over-indented (formatter)
    "D206",   # docstring indent (formatter)
    "D300",   # triple single quotes (formatter)
    "Q000",   # bad quotes inline (formatter)
    "Q001",   # bad quotes multiline (formatter)
    "Q002",   # bad quotes docstring (formatter)
    "Q003",   # avoidable escaped quote (formatter)
    "COM812", # missing trailing comma (formatter)
    "COM819", # prohibited trailing comma (formatter)
    "ISC002", # multi line implicit string concat (formatter)

    # ── Docstring style conflicts (pick ONE: we use Google style) ──
    "D203",   # one-blank-line-before-class (conflicts with D211)
    "D213",   # multi-line-summary-second-line (conflicts with D212)

    # ── Too noisy / opinionated for most projects ──
    "D100",   # missing docstring in public module
    "D104",   # missing docstring in public package
    "D107",   # missing docstring in __init__
    "TD003",  # missing issue link in TODO
    "FIX002", # line contains TODO (we allow TODOs)
    "ERA001", # commented-out code (too many false positives)
]

[tool.ruff.lint.per-file-ignores]
{% if project_type == "standalone" -%}
"tests/**/*.py" = [
{%- else -%}
"*/tests/**/*.py" = [
{%- endif %}
    "D",       # no docstrings required in tests
    "ANN",     # no type annotations required in tests
    "PLR2004", # allow magic values in tests
    "S101",    # assert is fine in tests
    "ARG",     # unused arguments (fixtures)
    "FBT",     # booleans as positional args (test parametrize)
]

[tool.ruff.lint.pydocstyle]
convention = "google"

[tool.ruff.lint.isort]
{% if project_type == "standalone" -%}
known-first-party = ["{{ module_name }}"]
{% else -%}
known-first-party = [{% for pkg in packages %}"{{ pkg | replace('-', '_') }}"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif %}
# ── Pyrefly ─────────────────────────────────────────────────────────────

[tool.pyrefly]
{% if project_type == "standalone" -%}
project-includes = ["src/**/*.py", "tests/**/*.py"]
search-path = ["src"]
{% else -%}
project-includes = [{% for pkg in packages %}"{{ pkg }}/src/**/*.py", "{{ pkg }}/tests/**/*.py"{% if not loop.last %}, {% endif %}{% endfor %}]
search-path = [{% for pkg in packages %}"{{ pkg }}/src"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif %}
[tool.pyrefly.errors]
unannotated-return = true
missing-override-decorator = true

# ── Pytest ──────────────────────────────────────────────────────────────

[tool.pytest.ini_options]
{% if project_type == "standalone" -%}
testpaths = ["tests"]
{% else -%}
testpaths = [{% for pkg in packages %}"{{ pkg }}/tests"{% if not loop.last %}, {% endif %}{% endfor %}]
pythonpath = [{% for pkg in packages %}"{{ pkg }}/src"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif -%}
addopts = [
    "--strict-markers",
    "--strict-config",
    "-ra",
    "--import-mode=importlib",
]

{% if project_type == "standalone" -%}
# ── Coverage ────────────────────────────────────────────────────────────

[tool.coverage.run]
source = ["{{ module_name }}"]
branch = true

{% endif -%}
[tool.coverage.report]
show_missing = true
fail_under = 80
exclude_lines = [
    "pragma: no cover",
    "if TYPE_CHECKING:",
    "if __name__ == .__main__.:",
    "@overload",
    "@abstractmethod",
    "raise NotImplementedError",
    "raise AssertionError",
]
